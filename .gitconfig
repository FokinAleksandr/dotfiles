[user]
	name = Fokin Alexander
	email = shwayze@yandex.ru

[checkout]
	defaultRemote = origin

[push]
	default = current
	autoSetupRemote = true

[pull]
	ff = only
	
[rebase]
	autoStash = true

[merge]
	log = true

[fetch]
	prune = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	aliases = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\2/g'
	lg = log --pretty=oneline -n 20 --graph --abbrev-commit
	st = status
	co = checkout

[help]
	# Automatically correct and execute mistyped commands
	autocorrect = 1
